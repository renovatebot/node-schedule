{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "CommonJs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "./build",
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "es6"
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/**/*", "./node_modules/**/**", "./jest.config.js"]
}
